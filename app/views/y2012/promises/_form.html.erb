<%= simple_form_for(@promise, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :reason, label: '투표를 왜 하시나요?', input_html: { class: 'span5' } %>
    <%= f.input :area, label: '지역' %>
    <%= f.input :sex, label: '성별', as: :radio_buttons, collection: %w[남 여], item_wrapper_class: 'inline' %>
    <%= f.input :age, label: '연령대', as: :radio_buttons, collection: %w[20대 30대 40대 50대 60대 70대 80대 90대], item_wrapper_class: 'inline' %>
    <%= f.association :candidate, label: '현재 지지 후보', collection: @candidates, :as => :radio_buttons %>
    <%= f.input :show_candidate, label: '지지 후보 공개', as: :radio_buttons %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
