<div class='span3 vote-<%=vote.id %>'>
  <div class='infobox'>
    <h4><span style='font-size:1.75em;font-style:italic;'><%= number_with_delimiter vote.seq %></span> <%= link_to vote.title, vote %></h4>
    <% if vote.image.blank? %>
      <%= simple_format vote.content %>
    <% else %>
      <%= link_to vote do %><%= image_tag vote.image, style: 'width: 100%;margin-bottom:2px;' %><% end %>
    <% end %>
    <p><%= link_to like_vote_path(vote), method: :post, remote: true, class: 'btn btn-block btn-primary' do %>
        <i class='icon-thumbs-up'></i> 좋아요! <%= content_tag :span, "(#{vote.likes})", class: 'likes' %>
      <% end %></p>
    <p class='muted'><%= link_to raw("<i class='icon-#{vote.user.omniauth_provider}'></i> #{vote.user.name}"), vote.user %></p>
    <%= link_to '수정', edit_vote_path(vote) if user_signed_in? && current_user == vote.user %>
  </div>
</div>