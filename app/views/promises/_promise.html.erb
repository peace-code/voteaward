<div style='border: 1px solid #DDDDDD; margin-bottom: 1em; padding: 1em; background: #F5F5F5;'>
  <div class='media'>
    <a class='pull-left'>
      <%= image_tag promise.user.profile_image, class: 'media-object', style: 'width: 80px;' %>
    </a>
    <div class='media-body'>
      <h4 class='media-heading'><%= promise.seq %> / <%= promise.user.name %></h4>
      <p class='muted'><%= raw "<b>#{promise.candidate.name}</b>을(를) 지지하는" unless promise.candidate.blank? %> <%= content_tag :b, promise.area %>의 <%= content_tag :b, promise.age %></p>
      <p><%= promise.reason %> <%= content_tag :span, promise.created_at, class: 'muted', style: 'font-size: 0.9em;' %></p>
      <%= link_to '수정', edit_promise_path(promise) if user_signed_in? && promise.user == current_user %>
    </div>
  </div>
</div>