<section id='new_promise'>
  <style>
    #new_promise label.radio.inline { margin-right: 0.5em; }
  </style>
  <div class="container">
    <div class="row">
      <div class="span12">
        <h1>투표하겠소</h1>
        <%= simple_form_for(@promise, :html => {:class => 'form-horizontal' }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :reason %>
            <%= f.input :area %>
            <%= f.input :sex, as: :radio_buttons, collection: %w[남 여], item_wrapper_class: 'inline' %>
            <%= f.input :age, as: :radio_buttons, collection: %w[20대 30대 40대 50대 60대 70대 80대 90대], item_wrapper_class: 'inline' %>
          </div>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>